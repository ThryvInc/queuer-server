source 'http://rubygems.org'

gem 'rails', '~> 3.2.13'
gem 'rack'
gem 'bootstrap-sass'
gem 'jquery-rails'
gem 'cancan'
gem 'newrelic_rpm'

gem 'json'  

gem 'guard'
gem 'guard-rspec'
gem 'awesome_print'

gem 'inherited_resources'

gem 'simple_admin', :git => 'git://github.com/jeffrafter/simple_admin.git'
gem "formtastic"
gem "fastercsv"

gem 'ransack'
gem 'kaminari'

# To use ActiveModel has_secure_password
gem 'bcrypt-ruby'

gem "devise"

gem 'mysql2'
gem 'sqlite3'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  gem 'uglifier', '>= 1.0.3'

  gem 'turbo-sprockets-rails3'
end

group :test do
  gem 'rspec-rails'
  gem 'rspec-instafail'
  gem 'factory_girl_rails'
end

gem 'jquery-rails'

# To use Jbuilder templates for JSON
# gem 'jbuilder'

# Use unicorn as the app server
 gem 'unicorn'

# To use debugger
gem 'debugger'

# This version needs to be hardcoded for OpenShift compatibility
gem 'thor', '= 0.14.6'

# This needs to be installed so we can run Rails console on OpenShift directly
gem 'minitest'
